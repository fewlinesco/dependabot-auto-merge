{
  "include": ["src/**/*.ts", "src/**/*.ts"],
  "exclude": ["build"],
  "compilerOptions": {
    "lib": ["ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    }
  }
}
